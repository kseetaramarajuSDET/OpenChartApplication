<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" thread-count="5" >


	<listeners>
		    <listener class-name="bridgelabz.UtilityClases.ExtentReportManagerUtility" />
			<listener class-name="bridgelabz.UtilityClases.MethodLogger" />
		    <listener class-name="bridgelabz.UtilityClases.RetryListener" />
	</listeners>

	<test name="WindowsChromeTest">
		<parameter name="browser" value="chrome" />
		<parameter name="os" value="windows" />
		<classes>
			<class name="bridgelabz.TestClasses.RegistrationTest" />
			<class name="bridgelabz.TestClasses.LoginTest" />
		</classes>
	</test> <!-- Test -->


	<test name="WindowsEdgeTest">
		<parameter name="browser" value="edge" />
		<parameter name="os" value="windows" />
		<classes>
			<class name="bridgelabz.TestClasses.RegistrationTest" />
			<class name="bridgelabz.TestClasses.LoginTest" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- Suite -->
